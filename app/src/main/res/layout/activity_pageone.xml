<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".ui.PageoneActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/productImage"
        android:layout_width="133dp"
        android:layout_height="115dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Name"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImage" />

    <com.example.km_test_suitmedia.ui.customview.PalidromeEditText
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/palindrome"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit_text_background"
        android:hint="Palindrome"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/checkPalidrome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:text="Text not Palindrome"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/palindrome"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/buttoncheck"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_background"
        android:text="CHECK"
        app:layout_constraintTop_toBottomOf="@+id/palindrome"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/buttonnext"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="NEXT"
        app:layout_constraintTop_toBottomOf="@+id/buttoncheck"
        tools:layout_editor_absoluteX="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>